{
  "name": "tendermint-js-client",
  "version": "0.0.5-0",
  "description": "The simple and minimalistic lib to get blockchain data from Tendermint node",
  "main": "index.js",
  "types": "./index.d.ts",
  "scripts": {
    "dev": "./node_modules/.bin/babel --watch ./src --out-dir ./lib --extensions \".ts,.tsx\"",
    "build": "./node_modules/.bin/babel ./src --out-dir ./lib --extensions \".ts,.tsx\"",
    "build-prod": "./node_modules/.bin/babel ./src --out-dir ./lib --extensions \".ts,.tsx\" --presets minify",
    "prepublish": "npm run build",
    "publish": "npm publish",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint-fix": "tslint --fix -c tslint.json 'src/**/*.ts'",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cryptoji/Tendermint-JS-Client.git"
  },
  "author": "cryptoji",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/cryptoji/Tendermint-JS-Client/issues"
  },
  "homepage": "https://github.com/cryptoji/Tendermint-JS-Client#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "msgpack-lite": "^0.1.26",
    "ws": "^6.1.2",
    "zen-observable": "^0.8.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@types/node": "^10.12.18",
    "babel-core": "^7.0.0-bridge.0",
    "babel-preset-minify": "^0.5.0",
    "jest": "^23.6.0"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.1",
    "utf-8-validate": "^5.0.2"
  }
}
